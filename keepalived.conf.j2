vrrp_script chk_pg {
    script "/etc/keepalived/check_pg.sh"
    interval 2
    timeout 3
    fall 2
    rise 2
}

vrrp_instance VI_1 {
    state {{ 'MASTER' if role == 'master' else 'BACKUP' }}
    interface {{ iface }}
    virtual_router_id 51
    priority {{ keepalived_priority }}
    advert_int 1

    authentication {
        auth_type PASS
        auth_pass 12345
    }

    virtual_ipaddress {
        {{ vip }}
    }

    track_script {
        chk_pg
    }
}
